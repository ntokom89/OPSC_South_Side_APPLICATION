<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/editLayout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePicture"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/editProfileNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="150dp"/>

    <EditText
        android:id="@+id/nameEditTextEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="80dp"
        android:hint="Jane Doe" />

    <TextView
        android:id="@+id/editProfileAboutTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="125dp"
        android:text="About:"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/aboutEditTextEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="150dp"
        android:hint="Experienced Traveller" />

    <TextView
        android:id="@+id/editProfileAddressTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Address:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="150dp"/>
    <EditText
        android:id="@+id/addressEditTextEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="150dp"
        android:hint="21 Fake Place, Johannesburg"/>

    <TextView
        android:id="@+id/editProfileNumberTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="150dp"/>

    <EditText
        android:id="@+id/numberEditTextEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="275dp"
        android:hint="012-345-6789" />

    <TextView
        android:id="@+id/editProfileEmailTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="150dp"/>

    <EditText
        android:id="@+id/emailEditTextEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="340dp"
        android:hint="janedoe@fakeemail.com" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveBtn"
        app:icon="@drawable/ic_baseline_save_24"
        app:strokeColor="@color/quantum_grey"
        app:strokeWidth="2dp"
        android:text="Save"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="500dp"
        android:backgroundTint="@android:color/transparent"
        android:onClick="update"
        android:paddingLeft="70dp"
        android:paddingRight="55dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold" />
</RelativeLayout>