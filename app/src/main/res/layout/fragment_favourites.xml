<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fragment="http://schemas.android.com/apk/res-auto"
    android:id="@+id/favouriteFragment"
    tools:context=".favouritesFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/favouriteToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:minHeight="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_back">

        <TextView
            android:id="@+id/favouritePageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Favourites"
            android:textSize="20dp"/>

    </com.google.android.material.appbar.MaterialToolbar>

    <!--TODO add addFavourite method in code and add code to button to go to map-->

    <SearchView
        android:id="@+id/searchFavourites"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="776dp"
        android:background="@drawable/searchfavouritestyle"
        android:iconifiedByDefault="false"
        android:queryHint="Search" />

    <LinearLayout
        android:id="@+id/filterByLayout"
        android:layout_width="match_parent"
        android:layout_height="577dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="131dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/filterByTxt"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:text="Filter by:"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/filterByLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/gasStationFilter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:src="@drawable/baseline_local_gas_station_black_24dp" />

            <ImageButton
                android:id="@+id/shoppingFilter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_baseline_shopping_cart" />

            <ImageButton
                android:id="@+id/restaurantFilter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_baseline_restaurant"></ImageButton>

            <ImageButton
                android:id="@+id/parkFilter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/baseline_park_black_24dp">

            </ImageButton>

            <ImageButton
                android:id="@+id/museumFilter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_baseline_museum">

            </ImageButton>

        </LinearLayout>

        <fragment
            android:id="@+id/favouriteListFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/favourites_layout"></fragment>
    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/addFavPlaceBtn"
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        android:layout_alignTop="@id/filterByLayout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="601dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="@android:color/transparent"
        android:onClick="addFavourite"
        android:paddingLeft="70dp"
        android:paddingRight="55dp"
        android:text="Add a new favourite"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:strokeColor="@color/quantum_grey"
        app:strokeWidth="2dp" />
</RelativeLayout>