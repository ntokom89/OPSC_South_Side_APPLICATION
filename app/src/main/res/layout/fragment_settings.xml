    <TextView
        android:id="@+id/loggedAs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="70dp"
        android:text="Logged in as:"
        android:textSize="20dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePicture"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="95dp"
        android:src="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/userLoggedIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="190dp"
        android:text="Jane Doe"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/goToEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="143dp"
        android:layout_marginTop="225dp"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_baseline_edit_24"
        android:text="_Edit Profile"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="260dp"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_logout"
        android:text="Log out"
        android:textColor="@color/quantum_googred"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="325dp"
        android:text="Units of measurement"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <RadioGroup
        android:id="@+id/unitsRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/imperialRadioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Imperial"
            android:textColor="#757575"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/metricRadioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:text="Metric"
            android:textColor="#757575"
            android:textSize="20dp" />
    </RadioGroup>

    <Spinner
        android:id="@+id/spinnerLandmark"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="410dp"
        />


</RelativeLayout>